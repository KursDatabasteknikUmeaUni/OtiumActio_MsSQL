@model OtiumActio.Models.ActivityViewModel
<fieldset>
    @using (Html.BeginForm("AddNewActivity", "SuggestedActivity", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <fieldset>
            @*<div>
                @Html.HiddenFor(model => model.Id)
            </div>*@
            @Html.LabelFor(model => model.Categories, new { @class = "control-label col-md-2" })
            <div class="col-md-10 editor-label">
                @Html.DropDownList("Category", (IEnumerable
            <SelectListItem>)ViewData["SelectableCategories"])
                @Html.ValidationMessageFor(model => model.Categories, "", new { @class = "text-danger" })

            </div>
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10 editor-label">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            @Html.LabelFor(model => model.Participants, new { @class = "control-label col-md-2" })
            <div class="col-md-10 editor-label">
                @Html.EditorFor(model => model.Participants)
                @Html.ValidationMessageFor(model => model.Participants, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-2" })
            <div class="col-md-10 editor-label">
                @Html.EditorFor(model => model.Date, new { @class = "date" })
            </div>


            <div class="col-md-10" style="margin-top: 15px">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>


        </fieldset>

    }
    <div id="snackbar">
        <p>@TempData["Success"]</p>
    </div>
    <div id="displayAllActivities"></div>

    </div>
    @section scripts
    {
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script>
        $(document).ready(function () {

            var success = @((TempData["Success"] != null).ToString().ToLower());
            if (success == true)
            {
                snackbarFunction();
                $('#displayAllActivities').load('@Url.Action("GetAllActivities", "SuggestedActivity")');
            }

        });
        function snackbarFunction() {
            var x = document.getElementById("snackbar");
            x.className = "show";
            setTimeout(function () {
                x.className = x.className.replace("show", "");

            }, 20000);
        }

        </script>
    }


